@import '../../theme'

.clearButton
  position: absolute
  top: 8px
  right: 8px
  background: $bg-color-light
  padding: 8px
  border: 1px solid rgba(0, 0, 0, 0)
  border-radius: 4px
  font-family: $font-family-sub
  color: alpha($font-color-main, 50%)
  cursor: pointer

  &:hover
    color: red

  &:focus
    outline: none
    border: 1px solid alpha(red, 25%)