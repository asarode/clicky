{
  "presets": ["es2015", "stage-0", "react"],
  "env": {
    "test": {
      "plugins": [
        "transform-decorators-legacy",
        [
          "babel-plugin-webpack-loaders",
          {
            "config": "./webpack.config.runtime.js",
            "verbose": false
          }
        ],
        [
          "module-resolver", {
            "root": ["./src"]
          }
        ]
      ]
    },
    "development": {
      "plugins": [
        "transform-runtime",
        "transform-decorators-legacy",
        ["react-transform", {
          "transforms": [{
            "transform" : "react-transform-hmr",
            "imports"   : ["react"],
            "locals"    : ["module"]
          }]
        }]
      ]
    }
  }
}